#!/usr/bin/env python
import findrox
import rox
from rox import g
import sys
from rox import applet
import time
import commands
import gtk


time_display = g.Label("")

def update_time():
	time_display.set_text(time.ctime())
	return 1

apm_display = g.Label("")
apm_display.set_justify(gtk.JUSTIFY_RIGHT)


#doesn't work start
map = apm_display.get_colormap()
colour = map.alloc("red")
style = apm_display.get_style().copy()
style.bg[gtk.STATE_NORMAL] = colour
style.bg[gtk.STATE_ACTIVE] = colour
style.bg[gtk.STATE_INSENSITIVE] = colour
style.bg[gtk.STATE_PRELIGHT] = colour
style.bg[gtk.STATE_SELECTED] = colour
apm_display.set_style(style)
#doesn't work end

#das label kann mehrere zeilen darstellen, man koennte die zeit also auch anzeigen
def update_apm():
	life_percent = "0%"
	life_time    = "00:00"
	
	res = commands.getoutput("apm")
	lines = res.split("\n")
	for i in lines:
		if i.find("battery life") > 0:
			life_res = i.split(":")
			life_percent = life_res[1]
			
		if i.find("battery time") > 0:
			life_res = i.split(": ")
			life_time = life_res[1]
			
	apm_display.set_text(life_percent + "\n" + life_time)
	return 1


update_time()
update_apm()


#main = rox.Window()

#hier koennte man auf parameterzahl pruefen, wenn 0, dann als mainwin
#starten, sonst als applet
#und apprun als script, welches appletrun aufruft
main = applet.Applet(sys.argv[1])

main.set_border_width(8)
main.add(apm_display)
main.show_all()

#g.timeout_add( 1000, update_time)
g.timeout_add(10000, update_apm)


rox.mainloop()
